.page-container{min-height:100vh;background:linear-gradient(135deg,#f5f7fa,#c3cfe2);padding:40rpx 30rpx}.back{display:flex;position:absolute;top:80rpx;left:30rpx;z-index:1000;background-color:#fff;border-radius:50%;width:70rpx;height:70rpx;justify-content:center;align-items:center;box-shadow:0 4rpx 20rpx rgba(0,0,0,.1);transition:all .3s ease}.back-image{width:40rpx;height:40rpx}.back:active{transform:scale(.95);background-color:rgba(240,240,240,.9)}.header{text-align:center;margin-top:60rpx;margin-bottom:50rpx}.title{display:block;font-size:46rpx;font-weight:700;color:#333;margin-bottom:16rpx}.subtitle{display:block;font-size:28rpx;color:#666}.donation-options{display:flex;flex-wrap:wrap;justify-content:space-between;margin-bottom:20rpx}.option-card{width:48%;background:#fff;border-radius:16rpx;padding:30rpx;margin-bottom:20rpx;text-align:center;box-shadow:0 4rpx 20rpx rgba(0,0,0,.06);transition:all .3s ease;border:2rpx solid transparent}.option-card.active{border-color:#07c160;transform:translateY(-5rpx);box-shadow:0 8rpx 25rpx rgba(0,0,0,.1)}.amount{display:block;font-size:36rpx;font-weight:700;color:#333;margin-bottom:10rpx}.description{display:block;font-size:24rpx;color:#888}.payment-section{background:#fff;border-radius:20rpx;padding:40rpx;margin-bottom:40rpx;box-shadow:0 4rpx 20rpx rgba(0,0,0,.06)}.section-title{display:flex;align-items:center;justify-content:center;margin-bottom:30rpx}.payment-icon{width:50rpx;height:50rpx;margin-right:15rpx}.payment-text{font-size:34rpx;font-weight:700;color:#333}.qr-code-container{text-align:center}.wxImage{width:400rpx;height:400rpx;border-radius:16rpx;box-shadow:0 4rpx 20rpx rgba(0,0,0,.1)}.hint{display:block;margin-top:20rpx;font-size:24rpx;color:#888}@media (max-width: 600px){.option-card{width:100%}}
